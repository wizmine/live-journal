generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  name     String
  articles Article[]
}

model Article {
  id       String  @id @default(cuid())
  content  String
  author   User?   @relation(fields: [authorId], references: [id])
  authorId String?
}
